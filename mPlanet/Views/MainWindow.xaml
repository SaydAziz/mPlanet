<Window x:Class="mPlanet.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="mPlanet RFID Помощник - Beta 1.1" 
        Height="500" 
        Width="900" 
        Icon="/Assets/Icons/MainIcon.ico"
        Closing="Window_Closing">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="60"/>
            <!-- Navigation Menu -->
            <RowDefinition Height="50"/>
            <!-- Content -->
            <RowDefinition Height="*"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Application Header -->
        <Rectangle Grid.Row="0" Fill="#34495E"/>
        <TextBlock Text="mPlanet RFID Помощник" 
                   Foreground="White" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center" 
                   Margin="20,0,0,0"/>

        <!-- Navigation Menu -->
        <Border Grid.Row="1" Background="#2C3E50">
            <StackPanel Orientation="Horizontal" Margin="20,0">
                <!-- Navigation Buttons -->
                <Button Content="🏠 Главная" 
                        Command="{Binding NavigateToMainCommand}"
                        Style="{StaticResource NavigationButtonStyle}"
                        Margin="0,0,10,0"/>
                
                <Button Content="📋 Инвентаризация" 
                        Command="{Binding NavigateToStockTakeCommand}"
                        Style="{StaticResource NavigationButtonStyle}"
                        Margin="0,0,10,0"/>

                <Button Content="⚙️ Настройки" 
                        Command="{Binding NavigateToSettingsCommand}"
                        Style="{StaticResource NavigationButtonStyle}"
                        Margin="0,0,10,0"/>

                <!-- Back/Forward buttons -->
                <!--
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="20,0,0,0">
                    <Button Content="◀" 
                            Command="{Binding GoBackCommand}"
                            Style="{StaticResource NavigationButtonStyle}"
                            Width="30"
                            Margin="0,0,5,0"
                            ToolTip="Назад"/>
                    <Button Content="▶" 
                            Command="{Binding GoForwardCommand}"
                            Style="{StaticResource NavigationButtonStyle}"
                            Width="30"
                            ToolTip="Вперед"/>
                </StackPanel>
                -->
            </StackPanel>
        </Border>

        <!-- Content Frame -->
        <Border Grid.Row="2" 
                Background="White" 
                Margin="20,10,20,10" 
                CornerRadius="10">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Margin="20"/>
        </Border>

        <!-- Status Bar with Connection Status -->
        <StatusBar Grid.Row="3" 
                   Background="#ECF0F1" 
                   BorderBrush="#BDC3C7" 
                   BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#34495E"
                           FontSize="12"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <!-- Connection Status Indicator -->
                    <Ellipse Width="10" Height="10" 
                             Margin="0,0,5,0"
                             VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#E74C3C"/> <!-- Red for disconnected -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="#27AE60"/> <!-- Green for connected -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               Foreground="#34495E"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>

    <!-- Window Resources for Navigation Button Style -->
    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1ABC9C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>