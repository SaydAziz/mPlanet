<Page x:Class="mPlanet.Views.Pages.StockTakePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Инвентаризация">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Summary + Main Content -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Panel -->
            <Border Grid.Row="0" Background="#ECF0F1" CornerRadius="5" Margin="0,0,0,10">
                <Grid Margin="15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Ожидается" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ExpectedCount}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#3498DB" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Найдено" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding FoundCount}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#27AE60" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Недостает" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding MissingCount}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#E74C3C" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="Лишних" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ExtraTags.Count}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#F39C12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Results Display -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Expected vs Scanned Comparison -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Expected Tags -->
                    <Border Grid.Column="0" Background="#E8F6F3" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Ожидаемые метки" 
                                       FontSize="16" FontWeight="Bold" 
                                       Foreground="#27AE60" Margin="15,10,15,5"/>

                            <ListView Grid.Row="1" ItemsSource="{Binding ExpectedTags}"
                                      Margin="10,5,10,10" Background="Transparent" BorderThickness="0">
                                <ListView.View>
                                    <GridView AllowsColumnReorder="False">
                                        <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="180"/>
                                        <GridViewColumn Header="RSSI" DisplayMemberBinding="{Binding RSSI}" Width="60"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Border>

                    <!-- Scanned Tags -->
                    <Border Grid.Column="2" Background="#EBF5FB" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Отсканированные метки" 
                                       FontSize="16" FontWeight="Bold" 
                                       Foreground="#3498DB" Margin="15,10,15,5"/>

                            <ListView Grid.Row="1" ItemsSource="{Binding ScannedTags}"
                                      Margin="10,5,10,10" Background="Transparent" BorderThickness="0">
                                <ListView.View>
                                    <GridView AllowsColumnReorder="False">
                                        <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="180"/>
                                        <GridViewColumn Header="RSSI" DisplayMemberBinding="{Binding RSSI}" Width="60"/>
                                        <GridViewColumn Header="Время" DisplayMemberBinding="{Binding ScanTime, StringFormat='{}{0:HH:mm:ss}'}" Width="70"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Missing and Extra Tags -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Missing Tags -->
                    <Border Grid.Column="0" Background="#FDEDEC" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Недостающие метки" 
                                       FontSize="16" FontWeight="Bold" 
                                       Foreground="#E74C3C" Margin="15,10,15,5"/>

                            <ListView Grid.Row="1" ItemsSource="{Binding MissingTags}"
                                      Margin="10,5,10,10" Background="Transparent" BorderThickness="0">
                                <ListView.View>
                                    <GridView AllowsColumnReorder="False">
                                        <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="180"/>
                                        <GridViewColumn Header="RSSI" DisplayMemberBinding="{Binding RSSI}" Width="60"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Border>

                    <!-- Extra Tags -->
                    <Border Grid.Column="2" Background="#FEF9E7" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Лишние метки" 
                                       FontSize="16" FontWeight="Bold" 
                                       Foreground="#F39C12" Margin="15,10,15,5"/>

                            <ListView Grid.Row="1" ItemsSource="{Binding ExtraTags}"
                                      Margin="10,5,10,10" Background="Transparent" BorderThickness="0">
                                <ListView.View>
                                    <GridView AllowsColumnReorder="False">
                                        <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="180"/>
                                        <GridViewColumn Header="RSSI" DisplayMemberBinding="{Binding RSSI}" Width="60"/>
                                        <GridViewColumn Header="Время" DisplayMemberBinding="{Binding ScanTime, StringFormat='{}{0:HH:mm:ss}'}" Width="70"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- Right Panel: Controls -->
        <ScrollViewer Grid.Column="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Connection Settings -->
                <GroupBox Header="Подключение сканера" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="COM:" Width="50"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding ComPort, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="5,0,0,0"/>
                        </Grid>

                        <Button Grid.Row="1" Content="Подключить" 
                                Command="{Binding ConnectCommand}"
                                Height="35" Margin="0,0,0,5"/>

                        <Button Grid.Row="2" Content="Отключить" 
                                Command="{Binding DisconnectCommand}"
                                Height="35"/>
                    </Grid>
                </GroupBox>

                <!-- Expected Stock -->
                <GroupBox Header="Ожидаемый инвентарь" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <Button Content="Загрузить инвентарь" 
                                Command="{Binding LoadExpectedStockCommand}"
                                Height="35" Margin="0,0,0,10"/>

                        <Button Content="Тестовые данные" 
                                Command="{Binding AddTestExpectedDataCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>

                <!-- Scanning -->
                <GroupBox Header="Сканирование" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <Button Content="Сканировать" 
                                Command="{Binding ScanCommand}"
                                Height="40" Margin="0,0,0,10"/>

                        <Button Content="Сравнить" 
                                Command="{Binding CompareStockCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>

                <!-- Actions -->
                <GroupBox Header="Действия" Padding="10">
                    <StackPanel>
                        <Button Content="Экспорт результатов" 
                                Command="{Binding ExportResultsCommand}"
                                Height="35" Margin="0,0,0,10"/>

                        <Button Content="Очистить все" 
                                Command="{Binding ClearAllCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>