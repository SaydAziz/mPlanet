                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>
                                </Border>
                            </StackPanel>
                        </Border>

                        <ListView Grid.Row="2" ItemsSource="{Binding ExtraTags}"
                                  Margin="10,5,10,10" Background="Transparent" BorderThickness="0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.Style>
                                <Style TargetType="ListView" BasedOn="{StaticResource {x:Type ListView}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsGridView}" Value="True">
                                            <Setter Property="ItemsPanel">
                                                <Setter.Value>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="ItemContainerStyle">
                                                <Setter.Value>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Padding" Value="0"/>
                                                        <Setter Property="Margin" Value="0"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListViewItem">
                                                                    <ContentPresenter/>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="ItemTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <Border Width="238" Height="324" Margin="5" 
                                                                Background="White" BorderBrush="#BDC3C7" BorderThickness="1"
                                                                CornerRadius="6">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                                            <Setter Property="BorderBrush" Value="#3498DB"/>
                                                                            <Setter Property="BorderThickness" Value="2"/>
                                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <Grid Margin="5">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="*"/>
                                                                </Grid.RowDefinitions>
                                                                
                                                                <!-- Incremental number in top-left corner -->
                                                                <Border Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                                                        Background="#F39C12" CornerRadius="6,0,6,0" Width="24" Height="24" 
                                                                        Margin="-5,-5,0,0" Panel.ZIndex="1000">
                                                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource ItemIndexConverter}}" 
                                                                               Foreground="White" FontSize="12" FontWeight="Bold" 
                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                
                                                                <!-- Tag Information at top -->
                                                                <StackPanel Grid.Row="0" Margin="0,0,0,5">
                                                                    <TextBlock Text="{Binding EPC}" FontWeight="Bold" FontSize="16" 
                                                                               TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                                                    <TextBlock Text="{Binding ProductInfo.BoxNumber}" FontSize="14" 
                                                                               Foreground="Blue" HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                                                    <TextBlock Text="{Binding ProductInfo.JewelryType}" FontSize="14" 
                                                                               Foreground="DarkGreen" HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                                                    <TextBlock Text="{Binding ProductInfo.ProductId}" FontSize="14" 
                                                                               Foreground="Purple" HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                                                    <TextBlock Text="{Binding ScanTime, StringFormat='{}{0:HH:mm:ss}'}" 
                                                                               FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                                                    <TextBlock Text="Не ожидается" 
                                                                               FontSize="14" Foreground="#F39C12" FontWeight="Bold" 
                                                                               HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                                                </StackPanel>
                                                                
                                                                <!-- Photo at bottom -->
                                                                <Border Grid.Row="1" Background="#F0F0F0" BorderBrush="#BDC3C7" 
                                                                        BorderThickness="1" CornerRadius="2">
                                                                    <Border.Visibility>
                                                                        <MultiBinding Converter="{StaticResource PhotoVisibilityConverter}">
                                                                            <Binding Path="DataContext.ShowPhotos" RelativeSource="{RelativeSource AncestorType=ListView}"/>
                                                                            <Binding Path="ProductInfo.Photo"/>
                                                                        </MultiBinding>
                                                                    </Border.Visibility>
                                                                    <Grid>
                                                                        <Image Source="{Binding ProductInfo.Photo, Converter={StaticResource PhotoSourceConverter}}" 
                                                                               Stretch="UniformToFill"/>
                                                                        <TextBlock Text="No photo" 
                                                                                   FontSize="14" 
                                                                                   Foreground="Gray" 
                                                                                   HorizontalAlignment="Center" 
                                                                                   VerticalAlignment="Center"
                                                                                   TextWrapping="Wrap">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding ProductInfo.Photo, Converter={StaticResource PhotoSourceConverter}}" Value="{x:Null}">
                                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                    </Grid>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsGridView}" Value="False">
                                            <Setter Property="ItemTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#BDC3C7" BorderThickness="0,0,0,1" Padding="10,5">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <!-- Incremental number in top-left corner -->
                                                                <Border Grid.Column="0" Background="#F39C12" CornerRadius="12" Width="24" Height="24" 
                                                                        Margin="0,0,10,0" VerticalAlignment="Top">
                                                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource ItemIndexConverter}}" 
                                                                               Foreground="White" FontSize="12" FontWeight="Bold" 
                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="{Binding EPC}" FontWeight="Bold" FontSize="14"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                                        <TextBlock Text="Box: " FontSize="14" Foreground="Blue"/>
                                                                        <TextBlock Text="{Binding ProductInfo.BoxNumber}" FontSize="14" Foreground="Blue"/>
                                                                        <TextBlock Text=" | Type: " FontSize="14" Foreground="DarkGreen" Margin="10,0,0,0"/>
                                                                        <TextBlock Text="{Binding ProductInfo.JewelryType}" FontSize="14" Foreground="DarkGreen"/>
                                                                        <TextBlock Text=" | ID: " FontSize="14" Foreground="Purple" Margin="10,0,0,0"/>
                                                                        <TextBlock Text="{Binding ProductInfo.ProductId}" FontSize="14" Foreground="Purple"/>
                                                                        <TextBlock Text=" | Время: " FontSize="14" Foreground="Gray" Margin="10,0,0,0"/>
                                                                        <TextBlock Text="{Binding ScanTime, StringFormat='{}{0:HH:mm:ss}'}" FontSize="14" Foreground="Gray"/>
                                                                        <TextBlock Text=" | Статус: " FontSize="14" Foreground="Gray" Margin="10,0,0,0"/>
                                                                        <TextBlock Text="Не ожидается" FontSize="14" Foreground="#F39C12" FontWeight="Bold"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                                
                                                                <Border Grid.Column="2" Width="80" Height="60" Margin="10,0,0,0"
                                                                        Background="#F0F0F0" BorderBrush="#BDC3C7" BorderThickness="1">
                                                                    <Border.Visibility>
                                                                        <MultiBinding Converter="{StaticResource PhotoVisibilityConverter}">
                                                                            <Binding Path="DataContext.ShowPhotos" RelativeSource="{RelativeSource AncestorType=ListView}"/>
                                                                            <Binding Path="ProductInfo.Photo"/>
                                                                        </MultiBinding>
                                                                    </Border.Visibility>
                                                                    <Grid>
                                                                        <Image Source="{Binding ProductInfo.Photo, Converter={StaticResource PhotoSourceConverter}}" 
                                                                               Stretch="UniformToFill"/>
                                                                        <TextBlock Text="Photo not found" 
                                                                                   FontSize="14" 
                                                                                   Foreground="Gray" 
                                                                                   HorizontalAlignment="Center" 
                                                                                   VerticalAlignment="Center"
                                                                                   TextWrapping="Wrap">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding ProductInfo.Photo, Converter={StaticResource PhotoSourceConverter}}" Value="{x:Null}">
                                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                    </Grid>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.Style>
                        </ListView>
                    </Grid>
                </Border>


            </Grid>
        </Grid>

        <!-- Right Panel: Controls -->
        <ScrollViewer Grid.Column="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Connection Settings -->
                <GroupBox Header="Подключение сканера" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="COM:" Width="50"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding ComPort, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="5,0,0,0"/>
                        </Grid>

                        <Button Grid.Row="1" Content="Подключить" 
                                Command="{Binding ConnectCommand}"
                                Height="35" Margin="0,0,0,5"/>

                        <Button Grid.Row="2" Content="Отключить" 
                                Command="{Binding DisconnectCommand}"
                                Height="35"/>
                    </Grid>
                </GroupBox>

                <!-- Expected Stock -->
                <GroupBox Header="Ожидаемый инвентарь" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <Button Content="Загрузить инвентарь" 
                                Command="{Binding LoadExpectedStockCommand}"
                                Height="35" Margin="0,0,0,10"/>

                        <Button Content="Тестовые данные" 
                                Command="{Binding AddTestExpectedDataCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>

                <!-- Scanning -->
                <GroupBox Header="Сканирование" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <Button Content="Сканировать" 
                                Command="{Binding ScanCommand}"
                                Height="40" Margin="0,0,0,10"/>

                        <Button Content="Сравнить" 
                                Command="{Binding CompareStockCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>

                <!-- Actions -->
                <GroupBox Header="Действия" Padding="10">
                    <StackPanel>
                        <Button Content="Экспорт результатов" 
                                Command="{Binding ExportResultsCommand}"
                                Height="35" Margin="0,0,0,10"/>

                        <Button Content="Очистить все" 
                                Command="{Binding ClearAllCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>