<Page x:Class="mPlanet.Views.Pages.StockTakePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Инвентаризация">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Summary + Main Content -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Panel with Clickable Status Buttons -->
            <Border Grid.Row="0" Background="#ECF0F1" CornerRadius="5" Margin="0,0,0,10">
                <Grid Margin="15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Expected Button -->
                    <Button Grid.Column="0" 
                            Command="{Binding ShowExpectedCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="10,5"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D5DBDB"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Ожидается" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding ExpectedCount}" FontSize="24" FontWeight="Bold" 
                                       Foreground="#3498DB" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Found Button -->
                    <Button Grid.Column="1" 
                            Command="{Binding ShowFoundCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="10,5"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D5DBDB"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Найдено" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding FoundCount}" FontSize="24" FontWeight="Bold" 
                                       Foreground="#27AE60" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Missing Button -->
                    <Button Grid.Column="2" 
                            Command="{Binding ShowMissingCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="10,5"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D5DBDB"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Недостает" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding MissingCount}" FontSize="24" FontWeight="Bold" 
                                       Foreground="#E74C3C" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Extra Button -->
                    <Button Grid.Column="3" 
                            Command="{Binding ShowExtraCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="10,5"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D5DBDB"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Лишних" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding ExtraTags.Count}" FontSize="24" FontWeight="Bold" 
                                       Foreground="#F39C12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Results Display - Single View that Changes Based on Selection -->
            <Grid Grid.Row="1">
                <!-- Expected Tags View -->
                <Border Background="#dbeef3" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Expected">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Ожидаемые метки" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#3498db" Margin="15,10,15,5"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding ExpectedTags}"
                                  Margin="10,5,10,10" Background="Transparent" BorderThickness="0">
                            <ListView.View>
                                <GridView AllowsColumnReorder="False">
                                    <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="250"/>
                                    <GridViewColumn Header="RSSI" DisplayMemberBinding="{Binding RSSI}" Width="80"/>
                                    <GridViewColumn Header="PC" DisplayMemberBinding="{Binding PC}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>

                <!-- Found Tags View (Scanned Tags filtered to show only found ones) -->
                <Border Background="#E6F7E6" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Found">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Найденные метки" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#27AE60" Margin="15,10,15,5"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding FoundTags}"
                                  Margin="10,5,10,10" Background="Transparent" BorderThickness="0">
                            <ListView.View>
                                <GridView AllowsColumnReorder="False">
                                    <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="250"/>
                                    <GridViewColumn Header="RSSI" DisplayMemberBinding="{Binding RSSI}" Width="80"/>
                                    <GridViewColumn Header="PC" DisplayMemberBinding="{Binding PC}" Width="100"/>
                                    <GridViewColumn Header="Время" DisplayMemberBinding="{Binding ScanTime, StringFormat='{}{0:HH:mm:ss}'}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>

                <!-- Missing Tags View -->
                <Border Background="#FDEDEC" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Expected">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Found">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Extra">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Недостающие метки" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#E74C3C" Margin="15,10,15,5"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding MissingTags}"
                                  Margin="10,5,10,10" Background="Transparent" BorderThickness="0">
                            <ListView.View>
                                <GridView AllowsColumnReorder="False">
                                    <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="250"/>
                                    <GridViewColumn Header="RSSI" DisplayMemberBinding="{Binding RSSI}" Width="80"/>
                                    <GridViewColumn Header="PC" DisplayMemberBinding="{Binding PC}" Width="100"/>
                                    <GridViewColumn Header="Статус" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Не найдено" Foreground="#E74C3C" FontWeight="Bold"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>

                <!-- Extra Tags View -->
                <Border Background="#FEF9E7" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Extra">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Лишние метки" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#F39C12" Margin="15,10,15,5"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding ExtraTags}"
                                  Margin="10,5,10,10" Background="Transparent" BorderThickness="0">
                            <ListView.View>
                                <GridView AllowsColumnReorder="False">
                                    <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="250"/>
                                    <GridViewColumn Header="RSSI" DisplayMemberBinding="{Binding RSSI}" Width="80"/>
                                    <GridViewColumn Header="PC" DisplayMemberBinding="{Binding PC}" Width="100"/>
                                    <GridViewColumn Header="Время" DisplayMemberBinding="{Binding ScanTime, StringFormat='{}{0:HH:mm:ss}'}" Width="100"/>
                                    <GridViewColumn Header="Статус" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Не ожидается" Foreground="#F39C12" FontWeight="Bold"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>


            </Grid>
        </Grid>

        <!-- Right Panel: Controls -->
        <ScrollViewer Grid.Column="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Connection Settings -->
                <GroupBox Header="Подключение сканера" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="COM:" Width="50"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding ComPort, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="5,0,0,0"/>
                        </Grid>

                        <Button Grid.Row="1" Content="Подключить" 
                                Command="{Binding ConnectCommand}"
                                Height="35" Margin="0,0,0,5"/>

                        <Button Grid.Row="2" Content="Отключить" 
                                Command="{Binding DisconnectCommand}"
                                Height="35"/>
                    </Grid>
                </GroupBox>

                <!-- Expected Stock -->
                <GroupBox Header="Ожидаемый инвентарь" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <Button Content="Загрузить инвентарь" 
                                Command="{Binding LoadExpectedStockCommand}"
                                Height="35" Margin="0,0,0,10"/>

                        <Button Content="Тестовые данные" 
                                Command="{Binding AddTestExpectedDataCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>

                <!-- Scanning -->
                <GroupBox Header="Сканирование" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <Button Content="Сканировать" 
                                Command="{Binding ScanCommand}"
                                Height="40" Margin="0,0,0,10"/>

                        <Button Content="Сравнить" 
                                Command="{Binding CompareStockCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>

                <!-- Actions -->
                <GroupBox Header="Действия" Padding="10">
                    <StackPanel>
                        <Button Content="Экспорт результатов" 
                                Command="{Binding ExportResultsCommand}"
                                Height="35" Margin="0,0,0,10"/>

                        <Button Content="Очистить все" 
                                Command="{Binding ClearAllCommand}"
                                Height="35"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>