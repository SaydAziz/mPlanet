<Page x:Class="mPlanet.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сканер RFID">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Scanned Tags Display (same as your current design) -->
        <Border Grid.Column="0" Background="#ECF0F1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Сканированные метки"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#34495E"
                           Margin="15,10,15,5"/>

                <ListView Grid.Row="1"
                          Name="scannedTagsListView" 
                          ItemsSource="{Binding ScannedTags}"
                          Margin="10,5,10,10" 
                          Background="Transparent" 
                          BorderThickness="0">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridViewColumn Header="EPC" 
                                            DisplayMemberBinding="{Binding EPC}" 
                                            Width="200"/>
                            <GridViewColumn Header="RSSI" 
                                            DisplayMemberBinding="{Binding RSSI}" 
                                            Width="80"/>
                            <GridViewColumn Header="Время" 
                                            DisplayMemberBinding="{Binding ScanTime, StringFormat='{}{0:HH:mm:ss}'}" 
                                            Width="70"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <!-- Right Panel: Controls (same as your current design) -->
        <StackPanel Grid.Column="2">
            <!-- Connection Settings -->
            <GroupBox Header="Подключение" Margin="0,0,0,15" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0" Content="COM:" Width="50"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding ComPort, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="5,0,0,0"/>
                    </Grid>

                    <Button Grid.Row="1"
                            Content="Подключить" 
                            Command="{Binding ConnectCommand}"
                            Height="35" 
                            Margin="0,0,0,5"/>

                    <Button Grid.Row="2"
                            Content="Отключить" 
                            Command="{Binding DisconnectCommand}"
                            Height="35"/>
                </Grid>
            </GroupBox>

            <!-- Scanning Operations -->
            <GroupBox Header="Сканирование" Margin="0,0,0,15" Padding="10">
                <StackPanel>
                    <Button Content="Сканировать" 
                            Command="{Binding GrabScanCommand}"
                            Height="40" 
                            Margin="0,0,0,10"/>

                    <Button Content="Тестовые данные" 
                            Command="{Binding AddTestDataCommand}"
                            Height="35"/>
                </StackPanel>
            </GroupBox>

            <!-- Export -->
            <GroupBox Header="Экспорт" Padding="10">
                <Button Content="Экспорт в JSON" 
                        Command="{Binding ExportCommand}"
                        Height="40"/>
            </GroupBox>
        </StackPanel>
    </Grid>
</Page>